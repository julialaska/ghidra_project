# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[.gitattributes]
indent_size = 16

[*.{diff,patch}]
end_of_line = lf
trim_trailing_whitespace = false

[*.css]
indent_size = 2

[*.gradle]
indent_size = 4
indent_style = tab

[*.html]
indent_size = 2

[*.java]
indent_size = 4
indent_style = tab

[*.js]
indent_size = 2

[*.json]
indent_size = 4

[*.{ldefs,pspec}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.sinc]
indent_size = 4
indent_style = tab

[*.slaspec]
indent_size = 4
indent_style = tab

[*.{cspec,project,xml}]
indent_size = 4
indent_style = tab
